$column ?= 60px
$gutter ?= 20px
$numColumns ?= 12
$totalWidth = $numColumns * $column + $gutter * ($column - 1)

column(col)
  width $column * col + $gutter * (col - 1)

offset(col)
  margin-left ($column + $gutter) * col + $gutter

input(col)
  width $column * col + $gutter * (col - 1) - 10px

.row
  margin-left -($gutter)
  *zoom 1

.row:before,
.row:after
  display table
  content ""

.row:after
  clear both

[class*="span"]
  float left
  margin-left $gutter

.container
  width $totalWidth

for col in 1..$numColumns
  .span{col}
    column(col)

  .offset{col}
    offset(col)

  input.span{col}
  textarea.span{col}
    input(col)

//  FORMS
input[class*="span"]
select[class*="span"]
textarea[class*="span"]
  float: none
  margin-left 0

.input-append input[class*="span"]
.input-prepend input[class*="span"]
  display: inline-block

input
textarea
  margin-left 0